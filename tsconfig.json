{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es2020.string"],
    "typeRoots": ["./src/server/types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ]
}